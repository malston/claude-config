{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(rm:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(sed:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(make test:*)",
      "mcp__git__git_commit",
      "Bash(curl:*)",
      "Bash(source:*)",
      "Bash(time make:*)",
      "mcp__serena__activate_project",
      "mcp__serena__find_file",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__find_symbol",
      "mcp__serena__search_for_pattern",
      "mcp__serena__think_about_collected_information",
      "mcp__serena__replace_symbol_body",
      "mcp__serena__think_about_whether_you_are_done",
      "Bash(gh issue list:*)",
      "Bash(npm test:*)",
      "Bash(git commit:*)",
      "Skill(code-reviewer)",
      "Bash(npm run test:coverage:*)",
      "Bash(npm run coverage:*)",
      "Bash(git add:*)",
      "Bash(HEADLESS=true npm run test:e2e:*)",
      "mcp__serena__list_dir"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "model": "sonnet",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json, sys; data=json.load(sys.stdin); path=data.get('tool_input',{}).get('file_path',''); sys.exit(2 if any(p in path for p in ['.env', 'package-lock.json', '.git/']) and not path.endswith('.envrc') else 0)\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/markdown_formatter.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.ts$'; then npx prettier --write \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c 'INPUT=$(cat); CWD=$(echo \"$INPUT\" | jq -r \".workspace.current_dir // .cwd // \\\"$(pwd)\\\"\"); OUTPUT=\"\"; if [ -n \"$FOUNDATION\" ]; then OUTPUT+=$(printf \"\\033[1;32mðŸª %s\\033[0m \" \"$FOUNDATION\"); fi; if [ -n \"$CWD\" ]; then OUTPUT+=$(printf \"\\033[1;36m%s\\033[0m \" \"$(basename \"$CWD\")\"); if [ -d \"$CWD/.git\" ] || git -C \"$CWD\" rev-parse --git-dir >/dev/null 2>&1; then BRANCH=$(git -C \"$CWD\" --no-optional-locks branch --show-current 2>/dev/null); REMOTE=$(git -C \"$CWD\" --no-optional-locks rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null | cut -d\"/\" -f2-); if [ -n \"$BRANCH\" ]; then if [ -n \"$REMOTE\" ] && [ \"$REMOTE\" != \"$BRANCH\" ]; then OUTPUT+=$(printf \"\\033[1;35mðŸŒ± %s:%s\\033[0m \" \"$BRANCH\" \"$REMOTE\"); else OUTPUT+=$(printf \"\\033[1;35mðŸŒ± %s\\033[0m \" \"$BRANCH\"); fi; STATUS=\"\"; git -C \"$CWD\" --no-optional-locks diff-index --quiet HEAD -- 2>/dev/null || STATUS+=\"Â±\"; UNTRACKED=$(git -C \"$CWD\" --no-optional-locks ls-files --others --exclude-standard 2>/dev/null | wc -l | tr -d \" \"); [ \"$UNTRACKED\" -gt 0 ] && STATUS+=\"?\"; [ -n \"$STATUS\" ] && OUTPUT+=$(printf \"\\033[1;33m[%s]\\033[0m \" \"$STATUS\"); fi; fi; fi; if command -v kubectl &>/dev/null 2>&1; then K8S_CONTEXT=$(kubectl config current-context 2>/dev/null); if [ -n \"$K8S_CONTEXT\" ]; then K8S_NS=$(kubectl config view --minify --output \"jsonpath={..namespace}\" 2>/dev/null); [ -z \"$K8S_NS\" ] && K8S_NS=\"default\"; OUTPUT+=$(printf \"\\033[1;36mâŽˆ %s (%s)\\033[0m \" \"$K8S_CONTEXT\" \"$K8S_NS\"); fi; fi; echo -n \"${OUTPUT% }\"; echo >&2'",
    "padding": 0
  },
  "enabledPlugins": {
    "commit-commands@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "superpowers@superpowers-marketplace": true,
    "elements-of-style@superpowers-marketplace": true,
    "superpowers-lab@superpowers-marketplace": true,
    "double-shot-latte@superpowers-marketplace": true,
    "nextjs-vercel-pro@claude-code-templates": true,
    "code-documentation@claude-code-workflows": true,
    "debugging-toolkit@claude-code-workflows": true,
    "git-pr-workflows@claude-code-workflows": true,
    "backend-development@claude-code-workflows": true,
    "frontend-mobile-development@claude-code-workflows": true,
    "full-stack-orchestration@claude-code-workflows": true,
    "code-refactoring@claude-code-workflows": true,
    "dependency-management@claude-code-workflows": true,
    "error-debugging@claude-code-workflows": true,
    "team-collaboration@claude-code-workflows": true,
    "documentation-generation@claude-code-workflows": true,
    "c4-architecture@claude-code-workflows": true,
    "multi-platform-apps@claude-code-workflows": true,
    "developer-essentials@claude-code-workflows": true,
    "unit-testing@claude-code-workflows": true,
    "tdd-workflows@claude-code-workflows": true,
    "code-review-ai@claude-code-workflows": true,
    "comprehensive-review@claude-code-workflows": true,
    "performance-testing-review@claude-code-workflows": true,
    "framework-migration@claude-code-workflows": true,
    "codebase-cleanup@claude-code-workflows": true,
    "claude-mem@thedotmack": true,
    "security-scanning@claude-code-workflows": true,
    "security-compliance@claude-code-workflows": true,
    "backend-api-security@claude-code-workflows": true,
    "frontend-mobile-security@claude-code-workflows": true,
    "python-development@claude-code-workflows": true,
    "javascript-typescript@claude-code-workflows": true,
    "systems-programming@claude-code-workflows": true,
    "jvm-languages@claude-code-workflows": true,
    "web-scripting@claude-code-workflows": true,
    "functional-programming@claude-code-workflows": true,
    "julia-development@claude-code-workflows": true,
    "arm-cortex-microcontrollers@claude-code-workflows": true,
    "shell-scripting@claude-code-workflows": true,
    "episodic-memory@superpowers-marketplace": true
  }
}
