{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enabledPlugins": {
    "claude-hud@claude-hud": true,
    "claude-mem@thedotmack": true,
    "commit-commands@claude-code-plugins": true,
    "gopls-lsp@claude-plugins-official": true,
    "hookify@claude-code-plugins": true
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "notify-send 'Claude Code' 'Awaiting your input'",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/markdown_formatter.py",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' \u003e\u003e ~/.claude/bash-command-log.txt",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(rm:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(sed:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(make test:*)",
      "mcp__git__git_commit",
      "Bash(curl:*)",
      "Bash(source:*)",
      "Bash(time make:*)",
      "Bash(gh issue list:*)",
      "Bash(npm test:*)",
      "Bash(git commit:*)",
      "Skill(code-reviewer)",
      "Bash(npm run test:coverage:*)",
      "Bash(npm run coverage:*)",
      "Bash(git add:*)",
      "Bash(HEADLESS=true npm run test:e2e:*)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits",
    "deny": []
  },
  "statusLine": {
    "command": "bash -c '\"/Users/markalston/.bun/bin/bun\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2\u003e/dev/null | head -1)src/index.ts\"'",
    "type": "command"
  }
}