{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(rm:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(sed:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(make test:*)",
      "mcp__git__git_commit",
      "Bash(curl:*)",
      "Bash(source:*)",
      "Bash(time make:*)",
      "Bash(gh issue list:*)",
      "Bash(npm test:*)",
      "Bash(git commit:*)",
      "Skill(code-reviewer)",
      "Bash(npm run test:coverage:*)",
      "Bash(npm run coverage:*)",
      "Bash(git add:*)",
      "Bash(HEADLESS=true npm run test:e2e:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/markdown_formatter.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/context-bar.sh"
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "episodic-memory@superpowers-marketplace": false,
    "elements-of-style@superpowers-marketplace": true,
    "claude-mem@thedotmack": true,
    "code-review@claude-plugins-official": false,
    "code-documentation@claude-code-workflows": false,
    "commit-commands@claude-plugins-official": false,
    "feature-dev@claude-plugins-official": false,
    "frontend-design@claude-plugins-official": false,
    "github@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": false,
    "security-guidance@claude-plugins-official": false,
    "code-review@claude-code-plugins": false,
    "commit-commands@claude-code-plugins": false,
    "feature-dev@claude-code-plugins": false,
    "hookify@claude-code-plugins": false,
    "plugin-dev@claude-code-plugins": false,
    "tanzu-cf-architect@tanzu-cf-architect": false
  }
}
